{
  "variables": {
    "ami_name": "ubuntu-22-04-cis-v3.0-{{timestamp}}",
    "region": "ap-south-1",
    "instance_type": "t3.micro",
    "ssh_username": "ubuntu"
  },
  "builders": [
    {
      "type": "amazon-ebs",
      "region": "{{user `region`}}",
      "source_ami_filter": {
        "filters": {
          "name": "ubuntu/images/hvm-ssd/ubuntu-jammy-22.04-amd64-server-*",
          "root-device-type": "ebs",
          "virtualization-type": "hvm"
        },
        "owners": ["099720109477"],
        "most_recent": true
      },
      "instance_type": "{{user `instance_type`}}",
      "ssh_username": "{{user `ssh_username`}}",
      "ami_name": "{{user `ami_name`}}",
      "ami_description": "CIS-hardened Ubuntu 22.04 AMI built by OS Hardening Factory",
      "tags": {
        "OS": "Ubuntu",
        "CIS_Level": "1",
        "MaintainedBy": "SecOps",
        "Project": "OS Hardening Factory"
      }
    }
  ],
  "provisioners": [
    {
      "type": "ansible",
      "playbook_file": "ansible/playbooks/harden.yml"
    }
  ],
  "post-processors": [
    [
      {
        "type": "manifest",
        "output": "manifests/manifest-ubuntu-22.04.json"
      }
    ]
  ]
}
